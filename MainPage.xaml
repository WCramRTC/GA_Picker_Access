<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GA_Picker_Access.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Picker -->
            <Picker
                x:Name="myPicker"
                Title="Choose a name"
                SelectedIndexChanged="OnPickerSelectedIndexChanged">
                <!-- Items will be added programmatically in the code-behind -->
            </Picker>

            <!-- Label -->
            <Label
                Text="Enter a name" />

            <!-- Editor -->
            <Editor
                x:Name="editorAddName" />

            <!-- Button -->
            <Button
                x:Name="buttonAddName"
                Text="Add a name"
                Clicked="OnButtonAddNameClicked" />

            <!-- Display Label -->
            <Label
                x:Name="labelDisplayChosenNameHere" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
